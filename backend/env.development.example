# Configuración para modo ONLINE (PostgreSQL)
# Copiar este archivo a .env.development y ajustar los valores

# Base de datos PostgreSQL
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/pymes_db?schema=public"

# Modo de base de datos: 'online' usa PostgreSQL, 'offline' usa SQLite
DB_MODE=online

# Puerto del servidor
PORT=8089

# Host para escuchar (0.0.0.0 permite acceso desde la red local)
HOST=0.0.0.0

# Configuración de CORS (orígenes permitidos separados por comas)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,file://

# JWT Secret (genera uno seguro para producción)
JWT_SECRET=tu_secret_jwt_muy_seguro_aqui_cambiar_en_produccion

# Node Environment
NODE_ENV=development

# SQLite URL (no se usa en modo online, pero debe estar definida)
DATABASE_URL_SQLITE="file:./data/local.db"
